<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    tools:background="@color/colorAccentSunshine">

    <TextView
        android:id="@+id/appwidget_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:padding="0dp"
        android:textSize="48sp"
        tools:text="30st"
        tools:drawableLeft="@drawable/art_rain"/>

    <TextView
        android:id="@+id/appwidget_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_gravity="center"
        tools:text="@string/location" />
<LinearLayout
    android:layout_marginEnd="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/appwidget_refresh"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="@string/reload"
        android:focusable="true"
        android:src="@drawable/outline_refresh_white_18dp"/>

    <TextView
        android:id="@+id/appwidget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        tools:text="26 lipca, 15:47" />

</LinearLayout>


</LinearLayout>